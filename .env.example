# OpenAI API Key
OPENAI_API_KEY=sk-your-api-key-here

# Model configuration
AGENT_MODEL=gpt-4o-mini
JUDGE_MODEL=gpt-4o

# Database (for pgvector)
DATABASE_URL=postgresql://localhost/eval_pipeline
USE_POSTGRES=false  # Set to true when postgres is available

# Agent selection
AGENT_TYPE=langgraph  # Options: langgraph, dspy_react

# Phoenix Observability (optional)
# Install with: pip install ".[observability]"
PHOENIX_ENABLED=false              # Set to true to enable tracing
PHOENIX_PROJECT_NAME=agent-eval-pipeline
PHOENIX_COLLECTOR_ENDPOINT=        # Leave empty for local Phoenix UI
PHOENIX_CAPTURE_LLM_CONTENT=true   # Log prompts/responses
